{
  "name": "mixpack",
  "version": "1.0.0",
  "description": "A mixed TypeScript/JavaScript Webpack boilerplate with Express.",
  "main": "src/js/index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "optimize": "node ./scripts/optimize-images.js",
    "analyze": "webpack --json --config ./scripts/webpack.prod.js > stats.json && webpack-bundle-analyzer --port 8080 stats.json",
    "dev": "rm -rf dist && webpack --mode development --config ./scripts/webpack.server.config.js && webpack --mode development --config ./scripts/webpack.dev.js && node ./dist/server.js",
    "build": "rm -rf dist && webpack --mode production --config ./scripts/webpack.server.config.js && webpack --mode production --config ./scripts/webpack.prod.js",
    "start": "node ./dist/server.js"
  },
  "keywords": [
    "mixpack",
    "webpack",
    "express",
    "jest",
    "nodejs",
    "typescript",
    "javascript",
    "sass",
    "css",
    "boilerplate"
  ],
  "author": "Matthew Waldron (http://waldronmatthew.com)",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "sanitize.css": "^12.0.1",
    "serverless-http": "^2.6.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.11.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.1",
    "dart-sass": "^1.25.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^11.2.1",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-webpack-plugin": "^2.1.0",
    "favicons-webpack-plugin": "^4.2.0",
    "file-loader": "^6.0.0",
    "font-loader": "^0.1.2",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.3.0",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^6.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^26.4.1",
    "jest-transform-stub": "^2.0.0",
    "mini-css-extract-plugin": "^0.10.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^8.1.2",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.0.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser-webpack-plugin": "^3.0.0",
