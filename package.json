{
  "name": "mixpack",
  "version": "2.7.0",
  "description": "A mixed TypeScript/JavaScript Webpack boilerplate with Express.",
  "main": "src/js/index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "optimize": "node ./scripts/optimize-images.js",
    "analyze": "webpack --json --config ./scripts/webpack.prod.js > stats.json && webpack-bundle-analyzer --port 8080 stats.json",
    "linthtml": "node_modules/.bin/html-validate src/**/*.html",
    "dev": "rm -rf dist && webpack serve --env development --config ./scripts/webpack.dev.js",
    "build": "rm -rf dist && webpack --config ./scripts/webpack.server.config.js && webpack --env production --config ./scripts/webpack.prod.js",
    "serve": "node ./dist/server.js"
  },
  "keywords": [
    "mixpack",
    "webpack",
    "express",
    "jest",
    "nodejs",
    "typescript",
    "javascript",
    "sass",
    "css",
    "boilerplate"
  ],
  "author": "Matthew Waldron (http://waldronmatthew.com)",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "sanitize.css": "^12.0.1",
    "serverless-http": "^2.6.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime": "^7.12.5",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@waldronmatt/prettier-config": "^1.0.3",
    "@waldronmatt/webpack-config": "^1.6.2",
    "babel-jest": "^26.5.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^11.2.1",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-webpack-plugin": "^2.1.0",
    "favicons-webpack-plugin": "^4.2.0",
    "html-loader": "^1.3.2",
    "html-validate": "^4.4.0",
    "html-validate-webpack-plugin": "^1.2.0",
    "html-webpack-plugin": "^5.0.0-alpha.6",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^6.0.0",
    "jest": "^26.4.1",
    "jest-transform-stub": "^2.0.0",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "preload-webpack-plugin": "^3.0.0-beta.3",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.3",
    "webpack": "^5.21.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.1"
  }
}
